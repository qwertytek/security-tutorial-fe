{
    "extends": "astro/tsconfigs/base",

    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@components/*": ["src/components/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
